<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".agregar_persona"
    android:id="@+id/cardview_add_id">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_addcontacto_id"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:padding="8dp"
            android:src="@drawable/profile"/>
        <EditText
            android:id="@+id/et_nombre_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nombre_de_contacto"
            android:gravity="left"
            android:padding="16dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
        <EditText
            android:id="@+id/et_telefono_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:inputType="phone"
            android:hint="@string/numero_de_telefono"/>
        <Button
            android:id="@+id/bttn_agregarcont_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agregar"
            android:layout_margin="8dp"
            android:layout_gravity="center" />
    </LinearLayout>
</android.support.v7.widget.CardView>